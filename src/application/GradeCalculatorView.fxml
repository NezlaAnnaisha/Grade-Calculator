<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>

<VBox alignment="CENTER" prefHeight="360.0" prefWidth="430.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GradeCalculatorController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" text="Project Grade:">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="projectGradeTextfield" alignment="CENTER">
                  	<HBox.margin>
                  	<Insets left="10.0" right="10.0" />
                  	</HBox.margin>
                  </TextField>
                  <Label alignment="CENTER" text="\%">
                  	<HBox.margin>
                  		<Insets right="10.0" />
                  	</HBox.margin>
                  </Label> 
               </children>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="projectErrorLabel" alignment="CENTER" contentDisplay="CENTER" text="" textFill="RED">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin></Label>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Required Coding Challenges:">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="requiredCodingChallengesChoiceBox" prefWidth="150.0">
            	<items>
            	  <FXCollections fx:factory="observableArrayList">
            	  		<Integer fx:value="0" />
            	  		<Integer fx:value="1" />
            	  		<Integer fx:value="2" />
            	  		<Integer fx:value="3" />
            	  		<Integer fx:value="4" />
            	  		<Integer fx:value="5" />
            	  		<Integer fx:value="6" />
            	  		<Integer fx:value="7" />
            	  		<Integer fx:value="8" />
            	  		<Integer fx:value="9" />
            	  		<Integer fx:value="10" />
            	  		<Integer fx:value="11" />
            	  		<Integer fx:value="12" />
            	  		<Integer fx:value="13" />
            	  		<Integer fx:value="14" />
            	  		<Integer fx:value="15" />
            	  </FXCollections>
            	</items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Optional Coding Challenges:">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin></Label>
            <ChoiceBox fx:id="optionalCodingChallengesChoiceBox" prefWidth="150.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <Integer fx:value="0" />
                     <Integer fx:value="1" />
                     <Integer fx:value="2" />
                     <Integer fx:value="3" />
                     <Integer fx:value="4" />
                     <Integer fx:value="5" />
                  </FXCollections>
               </items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ChoiceBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Required Quizzes:">
            <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin></Label>
            <ChoiceBox fx:id="requiredQuizzesChoiceBox" prefWidth="150.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <Integer fx:value="1" />
                     <Integer fx:value="2" />
                     <Integer fx:value="3" />
                     <Integer fx:value="4" />
                     <Integer fx:value="5" />
                     <Integer fx:value="6" />
                     <Integer fx:value="7" />
                     <Integer fx:value="8" />
                     <Integer fx:value="9" />
                     <Integer fx:value="10" />
                     <Integer fx:value="11" />
                     <Integer fx:value="12" />
                     <Integer fx:value="13" />
                     <Integer fx:value="14" />
                     <Integer fx:value="15" />
                  </FXCollections>
               </items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ChoiceBox>
            <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#getRequiredQuizGrades" text="Enter Quiz Grades" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Optional Quizzes:">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <ChoiceBox fx:id="optionalQuizzesChoiceBox" prefWidth="150.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <Integer fx:value="1" />
                     <Integer fx:value="2" />
                     <Integer fx:value="3" />
                     <Integer fx:value="4" />
                     <Integer fx:value="5" />
                     <Integer fx:value="6" />
                     <Integer fx:value="7" />
                  </FXCollections>
               </items>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ChoiceBox>
            <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#getOptionalQuizGrades" text="Enter Quiz Grades" />
         </children>
      </HBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#calculateGrade" text="Calculate Grade" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <Label fx:id="courseGradeLabel" text="">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
